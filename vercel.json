{
    "outputDirectory": "public",
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/webhook",
            "destination": "/api/webhook"
        }
    ],
    "crons": [
        {
            "path": "/api/ping",
            "schedule": "*/14 * * * *"
        }
    ]
}